.nav-left
  width 220px !important
  height 100%
  background-image url("../../img/background.png")
  font-family Baloo Bhaijaan
  font-weight bold
  float left
  position relative
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  -o-user-select none
  user-select none
  .nav-left-header
    position: relative;
    margin: 1rem;
    padding 10px 0 5px
    background: #fff
    border-radius: 6px;
  .avatar
    width 100px
    height 100px
    margin 15px auto 15px
    border-radius 50%
    background-repeat no-repeat
    background-size 100px 100px
    display block
    padding 2px
    border 1px solid rgba(42,43,51,.4)
    &:hover
      -webkit-animation rubberBand 1s
      animation rubberBand 1s
  .author
    text-align center
    height 27px
    color black
    font-weight normal
    font-family 'Josefin Sans'
  .more-menus
    display: none
  .icon
    text-align center
    margin 0 auto 5px
    a
      color black
      line-height 19px
      &:hover
        color #309e85
    .black-icon
        background black

  ul
    margin 0
    padding 0
    font-size 17px
    border-top 1px solid #fff
    list-style none
    overflow-y auto
    &.sub
      transition height .3s, border-top .3s
      border-left: solid 2px red;
      overflow-y hidden
      &.hide
        height 0 !important
        border-top hidden
      li
        line-height 25px
        font-size 14px
        &:last-child
          border-bottom hidden
        &>div
          height 25px
    li
      line-height 40px
      text-align center
      border-bottom 1px solid #fff
      cursor pointer
      &>div
        height 40px
        color #000
        position relative
        white-space nowrap
        overflow hidden
        z-index: 1;
        &::after {
          content: "";
          position: absolute;
          transition all .15s linear;
          top: 0;
          left: 0;
          width: 0;
          height: 100%;
          background: #FFFFFF;
          z-index: -1;
        }
        &:hover
          color gray
          //box-shadow inset 6px 0 0.09px #fff
          &:after {
            width: 5px;
          }
        &.active
          color #020202
          //inset 0 0 0.09px #fff, inset 100% 0 0.09px #fff;
          &:after {
            width: 100%;
          }
        &>.fold
          left: 4px
          font-size 0.7em
          position: absolute
          transition transform .3s
          &.unfold
            transform: rotate(90deg)

  .left-bottom
    position absolute
    display table
    border-collapse collapse
    bottom 0
    width 100%
    font-size 0
    color black
    a
      font-size 17px
      display table-cell
      height 30px
      text-align center
      vertical-align middle
      border-top 1px solid #fff
      width 100%
      line-height 30px
      &.about
        color black
        display: inline-block
        padding: 10px 0
        &.hasFriend
          border-right 1px solid #fff
          width calc(49% - 1px)
      &.friends
        display: inline-block
      &.dynamic-menu
        display block
